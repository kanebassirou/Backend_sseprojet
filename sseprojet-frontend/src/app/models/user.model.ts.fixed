export interface User {
  id?: number;
  nom: string;
  prenom?: string;
  email: string;
  motDePasseHash?: string;
  type: UserType;
  dateCreation?: Date;
  role?: string; // Pour compatibilité avec l'API JWT
}

export interface Administrateur extends User {
  type: 'ADMINISTRATEUR';
}

export interface ChefDeProjet extends User {
  type: 'CHEF_DE_PROJET';
  projets?: Projet[];
}

export interface Decideur extends User {
  type: 'DECIDEUR';
}

export interface Evaluateur extends User {
  type: 'EVALUATEUR';
  projet?: Projet;
}

export type UserType = 'ADMINISTRATEUR' | 'CHEF_DE_PROJET' | 'DECIDEUR' | 'EVALUATEUR';

// Interfaces pour l'API JWT - Adaptées au backend Spring Boot
export interface LoginRequest {
  email: string;
  motDePasse: string; // Backend utilise 'motDePasse' pas 'password'
}

export interface LoginResponse {
  token: string;
  type: string; // "Bearer"
  id: number;
  email: string;
  nom: string;
  role: string; // Backend utilise 'role' comme string ("CHEF_PROJET", etc.)
}

export interface RegisterRequest {
  nom: string;
  email: string;
  motDePasse: string; // Backend utilise 'motDePasse'
  typeUtilisateur: string; // Backend utilise 'typeUtilisateur' comme string
}

export interface CreateUserRequest {
  nom: string;
  prenom?: string;
  email: string;
  motDePasseHash: string;
  type: UserType;
}

export interface EvaluateurDTO {
  nom: string;
  email: string;
  motDePasseHash: string;
  projetId?: number;
}

// Import pour éviter les erreurs de type
import { Projet } from './projet.model';
